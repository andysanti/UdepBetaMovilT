<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AsistenciaActivity">

    <TextView
        android:id="@+id/lblAsistencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="Asistencias"
        app:layout_constraintStart_toStartOf="@+id/txtCurso"
        app:layout_constraintTop_toBottomOf="@+id/txtCurso" />

    <TextView
        android:id="@+id/txtAsistencias2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="95dp"
        android:layout_marginEnd="16dp"
        android:text="Asistencias"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtCurso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblFaltas"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:text="Faltas"
        app:layout_constraintBottom_toTopOf="@+id/lblSemestre"
        app:layout_constraintStart_toStartOf="@+id/lblAsistencia"
        app:layout_constraintTop_toBottomOf="@+id/lblAsistencia" />

    <TextView
        android:id="@+id/lblSemestre"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginTop="19dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/lblFaltas"
        app:layout_constraintTop_toBottomOf="@+id/lblAsistencia" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="54dp"
        android:layout_height="46dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/bell"
        app:layout_constraintBottom_toBottomOf="@+id/lblSemestre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCurso" />
</android.support.constraint.ConstraintLayout>